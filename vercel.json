{
  "builds": [
    {
      "src": "frontend/package.json",  
      "use": "@vercel/static-build",  
      "config": {
        "distDir": "frontend/dist"  
      }
    },
    {
      "src": "backend/index.js",  
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/API/(.*)", 
      "destination": "/backend/$1"  
    },
    {
      "source": "/(.*)", 
      "destination": "/frontend/index.html"  
    }
  ]
}
