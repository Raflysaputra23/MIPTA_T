{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist" 
      }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "/backend/$1"  
    },
    {
      "source": "/(.*)", 
      "destination": "/frontend/dist/index.html"  
    }
  ]
}
